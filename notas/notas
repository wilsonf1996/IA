<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minhas Notas</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        #note-container {
            display: flex;
            justify-content: space-around;
            align-items: flex-start;
            margin-top: 20px;
        }

        #note-list {
            width: 30%;
            text-align: left;
            border: 1px solid #ddd;
            padding: 10px;
            overflow-y: auto;
            max-height: 400px;
        }

        #note-text {
            width: 60%;
            height: 400px;
            border: 1px solid #ddd;
            padding: 10px;
            resize: none;
        }

        #buttons-container {
            margin-top: 20px;
        }

        button {
            padding: 10px;
            font-size: 16px;
            margin: 0 10px;
        }
    </style>
</head>
<body>
    <h1>Minhas Notas</h1>

    <div id="note-container">
        <div id="note-list"></div>
        <textarea id="note-text" placeholder="Digite sua nota aqui..."></textarea>
    </div>

    <div id="buttons-container">
        <button onclick="createNote()">Criar Nota</button>
        <button onclick="editNote()">Editar Nota</button>
        <button onclick="deleteNote()">Excluir Nota</button>
    </div>

    <script>
        // Função para obter notas salvas localmente
        function getSavedNotes() {
            const savedNotes = localStorage.getItem('notes');
            return savedNotes ? JSON.parse(savedNotes) : [];
        }

        // Função para salvar notas localmente
        function saveNotes(notes) {
            localStorage.setItem('notes', JSON.stringify(notes));
        }

        // Função para criar uma nova nota
        function createNote() {
            const noteText = document.getElementById('note-text').value;
            const currentDate = new Date().toLocaleString();

            const newNote = { text: noteText, date: currentDate };

            const notes = getSavedNotes();
            notes.push(newNote);

            saveNotes(notes);
            updateNoteList();
        }

        // Função para editar uma nota
        function editNote() {
            const noteList = document.getElementById('note-list');
            const selectedIndex = noteList.selectedIndex;

            if (selectedIndex !== -1) {
                const editedText = document.getElementById('note-text').value;
                const currentDate = new Date().toLocaleString();

                const notes = getSavedNotes();
                notes[selectedIndex] = { text: editedText, date: currentDate };

                saveNotes(notes);
                updateNoteList();
            } else {
                alert('Selecione uma nota para editar.');
            }
        }

        // Função para excluir uma nota
        function deleteNote() {
            const noteList = document.getElementById('note-list');
            const selectedIndex = noteList.selectedIndex;

            if (selectedIndex !== -1) {
                const notes = getSavedNotes();
                notes.splice(selectedIndex, 1);

                saveNotes(notes);
                updateNoteList();
            } else {
                alert('Selecione uma nota para excluir.');
            }
        }

        // Função para atualizar a lista de notas
        function updateNoteList() {
            const notes = getSavedNotes();
            const noteList = document.getElementById('note-list');

            noteList.innerHTML = '';

            notes.forEach((note, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.text = `${note.date}: ${note.text.slice(0, 20)}...`;
                noteList.add(option);
            });

            // Limpar o campo de texto da nota após a atualização
            document.getElementById('note-text').value = '';
        }

        // Ao carregar a página, carregue as notas salvas e atualize a lista de notas
        document.addEventListener('DOMContentLoaded', function () {
            updateNoteList();
        });
    </script>
</body>
</html>

